<p style="color: green"><%= notice %></p>

<h1>Products List</h1>

<% if @products.any? then %>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>
<% else %>
  <p>Products not registered</p>
<% end %>

<%= link_to "New product", new_product_path %>
